<h3 class="text-center">Adding new articles</h3>

<div class="row">
	<div class="col-md-12">
		<%= simple_form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
		<% if @article.errors.any? %>
			<div class="panel panel-danger col-md-offset-1">
				<div class="panel-heading">
					<div class="panel-title">
						<%= pluralize(@article.errors.count, 'error') %>
						prohibited this article from saving
					</div>
					<div class="panel-body">
						<ul>
							<% @article.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		<% end %>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :title, input_html:  {class: 'form-control', placeholder: 'text'} %>
				</div>
			</div>
			<div class="form-group">	
				<div class="col-md-12">
					<%= f.input :body, input_html:  {rows: 10, class: 'form-control', placeholder: 'text'} %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-1 col-md-11">
					<%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
				</div>
			</div>
		<% end %>
	</div>
</div>
