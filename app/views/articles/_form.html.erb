<h3 class="text-center">Adding new articles</h3>

<div class="row">
	<div class="col-md-12">
		<%= simple_form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :title, input_html:  {class: 'form-control', placeholder: 'text'} %>
				</div>
			</div>
			<div class="form-group">	
				<div class="col-md-12">
					<%= f.input :body, input_html:  {rows: 10, class: 'form-control', placeholder: 'text'} %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-1 col-md-11">
					<%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
				</div>
			</div>
		<% end %>
	</div>
</div>
